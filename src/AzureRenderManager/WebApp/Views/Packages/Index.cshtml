@model WebApp.Models.Packages.ListPackagesModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContext
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(HttpContext.HttpContext).RequestToken;
    }
}
@{
    ViewBag.Title = "RenderManagerPackages";
}

@section Breadcrumb
{
    <a asp-controller="Packages" asp-action="Index">Packages</a>
}

    <div class="page-header">
        <h2>Application Packages</h2>
        <p>Application packages are collections of files that can be installed on compute nodes during deployment.  A package can optionally specify a command line that
            can be used to install one or more files in the package, or execute a script included in the package.</p>
        <p>&nbsp;</p>
        <p>You can create packages for the different render manager worker nodes, GPU drivers and general for installation of custom software like renderers that you need
            installed.</p>
        <p>&nbsp;</p>
        <p>Keep in mind that packages take time to install so creating a custom image with all your required software pre-installed is the most performant method.</p>
    </div>
<div class="form-footer">
    <div class="button-bar">
        <a class="button" asp-controller="Packages" asp-action="Add">Add New Package <i class="fa fa-plus"></i></a>
    </div>
</div>
