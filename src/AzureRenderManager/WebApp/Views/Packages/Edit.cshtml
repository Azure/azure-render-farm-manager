@model WebApp.Models.Packages.EditPackageModel
@{
    ViewBag.Title = Model.PackageName;
}

@section Breadcrumb
{
    <a asp-controller="Packages" asp-action="Index">Packages</a> &gt;
    <span>@Model.PackageName</span>
}

<div class="page-header">
    <h2>@Model.PackageName - edit</h2>
    <p></p>
</div>

<form asp-controller="Packages" asp-action="Edit" asp-route-pkgId="@Model.PackageName">
@Html.AntiForgeryToken()
<div asp-validation-summary="ModelOnly" class=""></div>
    <div class="form-section">
        <div class="section-title">
            <span class="step-index">1</span>
            <div class="step-header">
                <h3>Package Details</h3>
                <p></p>
            </div>
        </div>
        <div class="section-wrapper">
            <div class="section-bar"></div>
            <div class="section-content">
                <div class="form-element">
                    <label asp-for="PackageName">Package Name</label>
                    <p>@Model.PackageName</p>
                </div>
                <div class="form-element">
                    <label asp-for="InstallCommandLine">Installation Command</label>
                    <input asp-for="InstallCommandLine" value="@Model.InstallCommandLine"/>
                    <span asp-validation-for="InstallCommandLine" class=""></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-footer">
        <div class="button-bar">
            <button type="submit" asp-route-pkgId="@Model.PackageName">Update Package <i class="fa fa-plus"></i></button>
        </div>
    </div>
</form>
