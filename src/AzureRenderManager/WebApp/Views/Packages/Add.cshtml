@section Scripts
{
<script>
    $("#PackageTypes").change(function () {
        // Disable all
        $('#PackageTypes > option').each(function() {
            var sectionToDisable = $(this).val();
            $('#' + sectionToDisable).hide();
        });

        var c = $("#PackageTypes option:selected").val();
        console.log(c);
        $('#' + c).show();
    });
</script>
}
